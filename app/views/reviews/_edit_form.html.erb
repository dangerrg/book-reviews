<%= form_for(@review, html: { class: 'form--inpage' }) do |form| %>
  <div class="input-group input-group--horizontal">
    <%= form.label(:book_title, class: 'input-group__label') %>
    <%= form.text_field(:book_title, class: 'input-group__field', placeholder: 'E.g. Fifty Shades of Grey') %>
  </div>
  <div class="input-group input-group--horizontal">
    <%= form.label(:body, class: "input-group__label") %>
    <%= form.text_area(:body, class: 'input-group__field', placeholder: 'What is the book about?') %>
  </div>
  <div class="input-group input-group--horizontal">
    <%= form.label(:image_url, class: "input-group__label") %>
    <%= form.text_field(:image_url, class: 'input-group__field', placeholder: 'Add an image link') %>
  </div>
  <div class="input-group input-group--horizontal">
    <%= form.label(:author, class: "input-group__label") %>
    <%= form.text_field(:author, class: 'input-group__field', placeholder: 'Author of the book') %>
  </div>
  <div class="prompt">
    <a class="prompt__cancel" href="#cancel">Cancel</a>
    <%= form.submit(class: 'btn btn--primary prompt__confirm') %>
  </div>
<% end %>
